<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.board">
	<resultMap id="boardResult" type="boardVO">
		<result property="boardIndex" column="boardIndex" />
        <result property="title" column="title" />
        <result property="name" column="name" />
        <result property="writtenDate" column="writtenDate" />
        <result property="push" column="push" />
        <result property="views" column="views" />
	</resultMap>
	
	<!-- 첫번째 페이지 조회 -->
	<select id="selectBoardFirstList" resultMap="boardResult">
		<![CDATA[
		select boardIndex, title, name, writtendate, push, views
		from (select * from etf_board order by boardIndex desc)
		where rownum <= 15
		]]>
	</select>
	
	<!-- 전체 글 갯수 조회 -->
	<select id="getIndexCount" resultType="pageVO">
		<![CDATA[
		select count(*) as totalIndexCount from etf_board
		]]>
	</select>

	<!-- 페이지별 조회 -->
	<select id="selectBoardPageList" parameterType="int" resultMap="boardResult">
		<![CDATA[
		SELECT boardIndex, title, name, writtendate, push, views
		FROM
		  (
		  SELECT SEQ, boardIndex, title, name, writtendate, push, views
		  FROM
		  (
		    SELECT ROWNUM AS SEQ, boardIndex, title, name, writtendate, push, views
		    FROM
		      (
		        SELECT *
		        FROM etf_board
		        ORDER BY boardindex DESC
		      )
		  )
		WHERE SEQ > 15*(#{page}-1) -- START NO
		)
		WHERE ROWNUM <= 15*#{page}; -- COUNT
		]]>
	</select>
</mapper>