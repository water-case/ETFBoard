<mapper namespace="mapper.member">
	<resultMap id="memResult" type="memberVO">
		<result property="id" column="id" />
        <result property="pwd" column="pwd" />
        <result property="name" column="name" />
        <result property="email" column="email" />
        <result property="joinDate" column="joinDate" />
	</resultMap> 
	<!-- 
	<resultMap id="memResult" type="java.util.HashMap">
      <result property="id" column="id" />
      <result property="pwd" column="pwd" />
      <result property="name" column="name" />
      <result property="email" column="email" />
      <result property="joinDate" column="joinDate" />
   </resultMap> -->

	<insert id="insertMember"  parameterType="memberVO">
		<![CDATA[
		insert into etf_member(id, pwd, name, email)
		values(#{id}, #{pwd}, #{name}, #{email})
		]]>
	</insert>

	<select id="login"  resultType="memberVO"   parameterType="memberVO" >
		<![CDATA[
		select * from etf_member
		where id=#{id} and pwd=#{pwd}
		]]>
	</select>
	
	<select id="getMoney" parameterType="String" resultClass = "java.lang.integer">
		<![CDATA[
		select money from etf_member where name=#{name}
		]]>
	</select>
	
	
</mapper>